<div class="container">
  <%= form_for @client, url: {action: :create} do |f| %>
  <%= csrf_meta_tags %>
      <div>
        <h3>Add a Client</h3>
      </div>
      <div>
        <p>
          <%= "<div>#{@client.errors.full_messages.first}</div>".html_safe if @client.errors.any? %>
        <div>
            <label>Client Name</label>
              <%= f.text_field :name %>
        </div>
      <div>
        <%= link_to 'Back', { controller: 'clients', action: 'index'} %>
        <%= f.submit 'Create Client' %>
      </div>
  <% end %>
</div>