<!DOCTYPE html>
<html>
<body>
 <div class="container">
    <%= flash[:notice] %>
    <h3>Client List</h3>

      <div>
        <%= link_to 'Add Client', clients_new_path %>
      </div>
      <br>
    <table border="2">
      <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @clients.each do |client| %>
          <tr>
            <td><%= client.id %></td>
            <td><%= client.name %></td>

           <div>
               <td>
                <%= link_to 'Edit', edit_client_path(client) %>
                <%= link_to 'Delete', client_path(client), method: :delete, data: { confirm: 'Are you sure?' } %>
           </div>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
    </div>
  </body>
</html>
