<div class="container">
  <%= form_for @transaction, url: {action: :create} do |f| %>
  <%= csrf_meta_tags %>
      <div>
        <h3>Add a Transaction</h3>
      </div>
      <div>
        <p>
          <%= "<div>#{@transaction.errors.full_messages.first}</div>".html_safe if @transaction.errors.any? %>
        <div>
            <label>Customer</label>
              <%= collection_select(:transaction, :customer_id, Customer.all, :id, :name) %>
        </div>
        <div>
            <label>Client</label>
              <%= collection_select(:transaction, :client_id, Client.all, :id, :name) %>
        </div>
        <div>
            <label>Amount</label>
             <%= f.number_field :amount, step: 0.5 %>
        </div>
        <div>
            <label>Currency Code</label>
             <%= f.text_field :currency_code %>
        </div>
        <div>
            <label>Transaction Date</label>
              <%= f.date_field :transaction_date %>
        </div>
      <div>
        <%= link_to 'Back', { controller: 'transactions', action: 'index'} %>
        <%= f.submit 'Create Transaction' %>
      </div>
  <% end %>
</div>